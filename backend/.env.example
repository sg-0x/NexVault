# Server Configuration
PORT=5000
NODE_ENV=development

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_BUCKET=your-s3-bucket-name
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# Blockchain Configuration (Ethereum/Sepolia)
INFURA_URL=https://sepolia.infura.io/v3/YOUR_PROJECT_ID
CONTRACT_ADDRESS=0xYourDeployedContractAddress
PRIVATE_KEY=0xYourEthereumPrivateKey

# Firebase Configuration
# Option 1: Use environment variable (for Railway/cloud deployments)
# Paste entire serviceAccountKey.json content as a single line JSON string
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"...","private_key":"..."}

# Option 2: Use file path (for local development)
# Place serviceAccountKey.json in backend/ directory
# FIREBASE_SERVICE_ACCOUNT_PATH=./serviceAccountKey.json
